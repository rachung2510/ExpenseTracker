<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:id="@+id/filterItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/shape_fully_rounded_rectangle"
        android:backgroundTint="@color/tag_bg_gray">

        <ImageView
            android:id="@+id/filterItemIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="-8dp"
            android:foreground="@drawable/cat_food"
            android:foregroundTint="@color/tag_text_gray" />

        <TextView
            android:id="@+id/filterItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"
            android:textColor="@color/tag_text_gray"
            android:text="@string/example_cat" />

        <ImageView
            android:id="@+id/delFilterItem"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="5dp"
            android:foreground="@drawable/ic_baseline_cancel_24"
            android:foregroundTint="@color/tag_text_gray"
            android:background="@drawable/selector_circle"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>